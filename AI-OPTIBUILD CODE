    <div class="container">
        <header>
            <h1>AI-Optibuild</h1>
            <p>Βρείτε τα ιδανικά εξαρτήματα για την κατασκευή του υπολογιστικού σας συστήματος</p>
        </header>
        
        <main>
            <form id="optibuildForm">
                <label for="budget">Προϋπολογισμός (€):</label>
                <input type="number" id="budget" name="budget" required min="0" max="5000">

                <label for="performance">Επίδοση:</label>
                <select id="performance" name="performance" required>
                    <option value="gaming">Gaming</option>
                    <option value="workstation">Workstation</option>
                    <option value="general">Γενική χρήση</option>
                </select>

                <button type="submit">Προτείνετε εξαρτήματα</button>
            </form>
            <div id="results"></div>
        </main>
    </div>
    
    <script>
        document.getElementById('optibuildForm').addEventListener('submit', function(event) {
            event.preventDefault();
            
            const budget = document.getElementById('budget').value;
            const performance = document.getElementById('performance').value;
            const resultsDiv = document.getElementById('results');
            
            let recommendations = [];
            
            if (performance === 'gaming') {
                recommendations = [
                    'CPU: AMD Ryzen 5 5600X (€200)',
                    'GPU: NVIDIA GeForce RTX 3060 (€400)',
                    'RAM: 16GB DDR4 (€80)',
                    'Motherboard: MSI B450 TOMAHAWK (€100)',
                    'Storage: 1TB NVMe SSD (€100)',
                    'Power Supply: 650W 80+ Gold (€70)',
                ];
            } else if (performance === 'workstation') {
                recommendations = [
                    'CPU: Intel Core i7-10700K (€300)',
                    'GPU: NVIDIA Quadro P2200 (€500)',
                    'RAM: 32GB DDR4 (€160)',
                    'Motherboard: ASUS Prime Z490-A (€150)',
                    'Storage: 1TB NVMe SSD + 2TB HDD (€150)',
                    'Power Supply: 750W 80+ Gold (€90)',
                ];
            } else if (performance === 'general') {
                recommendations = [
                    'CPU: AMD Ryzen 5 3600 (€180)',
                    'GPU: NVIDIA GeForce GTX 1650 (€150)',
                    'RAM: 16GB DDR4 (€80)',
                    'Motherboard: Gigabyte B450M DS3H (€60)',
                    'Storage: 512GB NVMe SSD (€60)',
                    'Power Supply: 550W 80+ Bronze (€50)',
                ];
            }
            
            resultsDiv.innerHTML = `
                <h3>Προτάσεις εξαρτημάτων:</h3>
                <ul>
                    ${recommendations.map(item => `<li>${item}</li>`).join('')}
                </ul>
            `;
        });
    </script>
